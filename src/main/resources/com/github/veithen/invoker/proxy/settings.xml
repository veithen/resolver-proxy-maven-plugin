<settings>
    <!-- This is necessary because the invoked POM will use snapshot versions
         but Maven doesn't predefine any snapshot repositories (Only Maven
         central is predefined and it is configured for releases only). -->
    <profiles>
        <profile>
            <id>local-snapshots</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <repositories>
                <repository>
                    <id>local-snapshots</id>
                    <url>http://localhost:@resolverProxyPort@</url>
                    <releases>
                        <enabled>false</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                        <checksumPolicy>ignore</checksumPolicy>
                    </snapshots>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>local-snapshots</id>
                    <url>http://localhost:@resolverProxyPort@</url>
                    <releases>
                        <enabled>false</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                        <checksumPolicy>ignore</checksumPolicy>
                    </snapshots>
                </pluginRepository>
            </pluginRepositories>
        </profile>
    </profiles>
    <!-- Make sure that all requests go to the proxy, even if the invoked POM
         has dependencies that declare additional repositories. -->
    <mirrors>
        <mirror>
            <id>resolver-proxy</id>
            <name>Resolver Proxy</name>
            <url>http://localhost:@resolverProxyPort@</url>
            <mirrorOf>external:*</mirrorOf>
        </mirror>
    </mirrors>
</settings>
